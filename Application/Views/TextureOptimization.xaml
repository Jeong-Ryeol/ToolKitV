<UserControl x:Class="ToolKitV.Views.TextureOptimization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolKitV.Views"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="0 -5 0 0">
                <local:SelectFolder
                    x:Name="MainFolder"
                    Title="텍스처 폴더"
                    PropertyChanged="OnMainPathChanged"/>

                <StackPanel Margin="0 10 0 0">
                    <!--<local:ToogleButton
                        Title ="Backup"/>-->

                    <local:SelectFolder
                        x:Name="BackupFolder"
                        Title="백업 폴더"
                        PropertyChanged="OnBackupPathChanged"/>
                </StackPanel>

                <StackPanel Margin="0 10 0 0">
                    <local:FileSizeFilterSlider
                        x:Name="FileSizeFilter"
                        Title="파일 크기 필터"
                        Description="이 크기(MB) 이상의 파일만 최적화합니다. 0을 선택하면 모든 파일을 처리합니다."
                        NumberValue="16"
                        PropertyChanged="FileSizeFilter_PropertyChanged"/>
                </StackPanel>

                <StackPanel Margin="0 0 0 0">
                    <local:InputNumber
                        x:Name="OptimizeSize"
                        Title="최적화 기준값"
                        Description="가로 + 세로 픽셀 합계 기준값입니다.&#10;최적화가 안되면 더 낮은 값을 시도해보세요 (4096, 2048, 1024, 512)"
                        NumberValue="2048"
                        PropertyChanged="OptimizeSize_PropertyChanged"/>
                </StackPanel>

                <StackPanel Margin="0 10 0 0">
                    <local:ToogleButton
                        x:Name="Downsize"
                        Title="해상도 축소"
                        Description="활성화 시 텍스처 해상도가 2배 축소됩니다. (품질 저하 발생)"
                        PropertyChanged="Downsize_PropertyChanged"
                        IsToogled="False"/>
                </StackPanel>

                <StackPanel Margin="0 10 0 0">
                    <local:ToogleButton
                        x:Name="FormatOptimize"
                        Title="포맷 강제 최적화"
                        Description="텍스처 포맷을 강제로 변경합니다. 색상 품질에 영향을 줄 수 있습니다."
                        PropertyChanged="FormatOptimize_PropertyChanged"/>
                </StackPanel>

                <StackPanel Margin="0 35 0 0" Orientation="Horizontal">
                    <local:Button x:Name="OptimizeButton" Title="최적화" IsButtonEnabledValue="False" Click="OptimizeButton_Click"/>
                    <local:Button x:Name="AnalyzeButton" Title="분석" IsButtonEnabledValue="False" Click="AnalyzeButton_Click" Margin="30 0 0 0"/>
                </StackPanel>
            </StackPanel>

            <local:Stats Margin="190 0 0 0" x:Name="Stats"/>
        </StackPanel>
    </Grid>
</UserControl>
