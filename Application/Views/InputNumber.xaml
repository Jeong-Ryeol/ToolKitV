<UserControl x:Class="ToolKitV.Views.InputNumber"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolKitV.Views"
             mc:Ignorable="d"
             d:DataContext="{Binding Mode=Default, RelativeSource={RelativeSource Self}}">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 14 0 0">
                <Label
                    HorizontalAlignment="Left"
                    Foreground="White"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="14"
                    Content="{Binding Title}"/>
                <Label
                    Margin="10 0 0 0"
                    HorizontalAlignment="Left"
                    Foreground="#99FFFFFF"
                    Style="{StaticResource TT Norms Medium}"
                    FontSize="14"
                    Content="{Binding Value}"/>
            </StackPanel>

            <Slider
                x:Name="ValueSlider"
                Margin="0 8 0 0"
                Width="300"
                HorizontalAlignment="Left"
                Minimum="0"
                Maximum="4"
                TickFrequency="1"
                IsSnapToTickEnabled="True"
                Value="{Binding SliderValue}"
                ValueChanged="Slider_ValueChanged"
                IsEnabled="{Binding IsInputEnabled}">
                <Slider.Style>
                    <Style TargetType="Slider">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Slider">
                                    <Grid>
                                        <Border
                                            Height="4"
                                            Background="#15FFFFFF"
                                            CornerRadius="2"/>
                                        <Track x:Name="PART_Track">
                                            <Track.DecreaseRepeatButton>
                                                <RepeatButton Command="Slider.DecreaseLarge" Style="{StaticResource SliderButtonStyle}"/>
                                            </Track.DecreaseRepeatButton>
                                            <Track.IncreaseRepeatButton>
                                                <RepeatButton Command="Slider.IncreaseLarge" Style="{StaticResource SliderButtonStyle}"/>
                                            </Track.IncreaseRepeatButton>
                                            <Track.Thumb>
                                                <Thumb>
                                                    <Thumb.Template>
                                                        <ControlTemplate>
                                                            <Ellipse
                                                                Width="16"
                                                                Height="16"
                                                                Fill="White"
                                                                Cursor="Hand"/>
                                                        </ControlTemplate>
                                                    </Thumb.Template>
                                                </Thumb>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Slider.Style>
            </Slider>

            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <Label Content="512" Foreground="#33FFFFFF" Style="{StaticResource TT Norms Regular}" FontSize="10"/>
                <Label Content="1024" Margin="38 0 0 0" Foreground="#33FFFFFF" Style="{StaticResource TT Norms Regular}" FontSize="10"/>
                <Label Content="2048" Margin="38 0 0 0" Foreground="#33FFFFFF" Style="{StaticResource TT Norms Regular}" FontSize="10"/>
                <Label Content="4096" Margin="38 0 0 0" Foreground="#33FFFFFF" Style="{StaticResource TT Norms Regular}" FontSize="10"/>
                <Label Content="8192" Margin="38 0 0 0" Foreground="#33FFFFFF" Style="{StaticResource TT Norms Regular}" FontSize="10"/>
            </StackPanel>

            <Label
                HorizontalAlignment="Left"
                Foreground="#33FFFFFF"
                Style="{StaticResource TT Norms Regular}"
                FontSize="14"
                Content="{Binding Description}"/>
        </StackPanel>
    </Grid>
</UserControl>
