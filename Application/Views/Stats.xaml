<UserControl x:Class="ToolKitV.Views.Stats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolKitV.Views"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="0 0 0 0" x:Name="StatsBlock">
            <TextBlock Text="분석 데이터:"
                Foreground="#FFFFFF"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Style="{StaticResource TT Norms Medium}"
                FontSize="12px"
                Typography.Capitals="AllSmallCaps"
            />

            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <TextBlock Text="파일 개수: "
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
                <TextBlock x:Name="FilesCount"
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <TextBlock Text="대용량 파일 (16MB+): "
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
                <TextBlock x:Name="OversizedCount"
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <TextBlock Text="가상 메모리 크기: "
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
                <TextBlock x:Name="VirtualSize"
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <TextBlock Text="실제 파일 크기: "
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
                <TextBlock x:Name="PhysicalSize"
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
            </StackPanel>

            <TextBlock Text="최적화 결과:"
                Foreground="#FFFFFF"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Style="{StaticResource TT Norms Medium}"
                FontSize="12px"
                Typography.Capitals="AllSmallCaps"
                Margin="0 15 0 0"
            />
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <TextBlock Text="최종 파일 크기: "
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
                <TextBlock x:Name="FilesSizeResult"
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <TextBlock Text="최적화된 파일: "
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
                <TextBlock x:Name="OptimizedFiles"
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <TextBlock Text="절약된 용량: "
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
                <TextBlock x:Name="OptimizedSize"
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <TextBlock Text="절약 비율: "
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
                <TextBlock x:Name="OptimizedProcent"
                    Foreground="#FFFFFF"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource TT Norms Regular}"
                    FontSize="12px"
                    Typography.Capitals="AllSmallCaps"
                    Margin="0 5 0 0"
                />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
