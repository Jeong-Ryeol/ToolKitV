<Application x:Class="ToolKitV.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ToolKitV"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="TT Norms Regular">
            <Setter Property="TextElement.FontFamily"
                    Value="Assets/Fonts/#TT Norms Regular"/>
        </Style>
        <Style x:Key="TT Norms Medium">
            <Setter Property="TextElement.FontFamily"
                    Value="Assets/Fonts/#TT Norms Medium"/>
        </Style>
        <Style x:Key="TT Norms Bold">
            <Setter Property="TextElement.FontFamily"
                    Value="Assets/Fonts/#TT Norms Bold"/>
        </Style>
        <Style x:Key="SliderButtonStyle" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
